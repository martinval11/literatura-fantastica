---
interface Props {
	link: string;
}

const { link } = Astro.props;
---

<a
	href={link}
	target='_blank'
	rel='noopener noreferrer'>
	<slot />
</a>

<style>
	a {
		color: #090909;
		text-decoration: none;
		border: 1px solid #ddd;
		padding: 10px;
		border-radius: 3px;
		transition: border 0.1s ease-in-out;

		&:hover {
			border-color: #aaa;
		}
	}
</style>
